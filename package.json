{
	"name": "ts-node-oidc",
	"version": "1.0.0",
	"main": "index.ts",
	"author": "yutak23",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"tsc:watch": "tsc --watch",
		"tsc": "tsc",
		"lint": "eslint . --ext .cjs,.mjs,.js,.ts,.cts,.mts",
		"lint:fix": "eslint . --ext .cjs,.mjs,.js,.ts,.cts,.mts --fix",
		"style": "prettier --write .",
		"ncu": "ncu",
		"prepare": "npx simple-git-hooks"
	},
	"dependencies": {
		"express": "^4.18.2",
		"make-error": "^1.3.6"
	},
	"devDependencies": {
		"@tsconfig/node16": "^16.1.0",
		"@tsconfig/recommended": "^1.0.2",
		"@types/express": "^4.17.17",
		"@types/node": "^16.18.35",
		"@typescript-eslint/eslint-plugin": "^6.2.1",
		"@typescript-eslint/parser": "^6.2.1",
		"eslint": "^8.46.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^8.9.0",
		"eslint-plugin-import": "^2.28.0",
		"license-checker": "^25.0.1",
		"lint-staged": "^13.2.3",
		"npm-check-updates": "^16.10.17",
		"prettier": "^3.0.0",
		"simple-git-hooks": "^2.9.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.6",
		"vitest": "^0.33.0"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged --verbose"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"**/*.{cjs,mjs,js,ts,cts,mts}": "eslint",
		"yarn.lock": "license-checker --production --failOn \"GPL;AGPL;LGPL;NGPL\" --summary"
	}
}
