{
	"name": "auth-bearer-parser",
	"version": "1.0.1",
	"author": "yutak23 <yuta.katayama.23+github@gmail.com> (https://github.com/yutak23)",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:yutak23/auth-bearer-parser.git"
	},
	"license": "MIT",
	"type": "module",
	"types": "./esm/index.d.ts",
	"main": "./cjs/index.js",
	"module": "./esm/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./esm/index.d.ts",
				"default": "./esm/index.js"
			},
			"require": {
				"types": "./cjs/index.d.ts",
				"default": "./cjs/index.js"
			},
			"default": "./cjs/index.js"
		}
	},
	"scripts": {
		"build": "run-s clean build:*",
		"build:esm": "tsc -p ./tsconfig.esm.json && echo '{\"type\":\"module\"}' > esm/package.json",
		"build:cjs": "tsc -p ./tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > cjs/package.json",
		"clean": "rm -rf ./esm ./cjs",
		"test": "vitest run --coverage",
		"lint": "eslint . --ext .cjs,.mjs,.js,.ts,.cts,.mts",
		"lint:fix": "eslint . --ext .cjs,.mjs,.js,.ts,.cts,.mts --fix",
		"format": "prettier -c .",
		"format:fix": "prettier --write .",
		"ncu": "ncu"
	},
	"dependencies": {
		"express": "^4.18.2",
		"make-error": "^1.3.6"
	},
	"devDependencies": {
		"@tsconfig/node16": "^16.1.3",
		"@tsconfig/recommended": "^1.0.6",
		"@types/express": "^4.17.17",
		"@types/node": "^20.12.12",
		"@typescript-eslint/eslint-plugin": "^7.10.0",
		"@typescript-eslint/parser": "^7.10.0",
		"@vitest/coverage-v8": "^1.0.0",
		"eslint": "^9.3.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"npm-check-updates": "^16.10.17",
		"npm-run-all2": "^6.0.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5",
		"vitest": "^1.0.0"
	},
	"files": [
		"esm",
		"cjs"
	],
	"keywords": [
		"node",
		"nodejs",
		"javascript",
		"js",
		"library",
		"lib",
		"module",
		"typescript",
		"ts",
		"esm",
		"express",
		"auth",
		"authorization",
		"bearer",
		"token",
		"parser"
	]
}
